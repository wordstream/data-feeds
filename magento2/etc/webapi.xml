<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/WordStream/getproduct/id/:id" method="GET">
        <service class="WordStream\DataFeed\Api\ProductInterface" method="getProduct"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>
    <route url="/V1/WordStream/products" method="GET">
        <service class="WordStream\DataFeed\Api\ProductInterface" method="getProducts"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>
    <route url="/V1/WordStream/products/count" method="GET">
        <service class="WordStream\DataFeed\Api\ProductInterface" method="getProductsCount"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>
</routes>
